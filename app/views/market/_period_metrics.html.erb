<%# locals: perf_pct:, high:, low:, pos_pct:, max_drawdown_pct:, vol_label:, vol_pct: %>
<% return unless perf_pct.present? %>

<div class="mt-4 grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-6 gap-3">
  <div class="bg-gray-900/60 border border-gray-700 rounded-xl p-3">
    <div class="text-xs text-gray-400">Perf</div>
    <div class="text-lg font-semibold <%= perf_pct.to_f >= 0 ? "text-emerald-300" : "text-rose-300" %>">
      <%= perf_pct.to_f > 0 ? "+" : "" %><%= perf_pct %>%
    </div>
  </div>

  <div class="bg-gray-900/60 border border-gray-700 rounded-xl p-3">
    <div class="text-xs text-gray-400">High</div>
    <div class="text-lg font-semibold text-gray-100">
      <%= number_with_precision(high, precision: 0, delimiter: " ") %> $
    </div>
  </div>

  <div class="bg-gray-900/60 border border-gray-700 rounded-xl p-3">
    <div class="text-xs text-gray-400">Low</div>
    <div class="text-lg font-semibold text-gray-100">
      <%= number_with_precision(low, precision: 0, delimiter: " ") %> $
    </div>
  </div>

  <div class="bg-gray-900/60 border border-gray-700 rounded-xl p-3">
    <div class="text-xs text-gray-400">Position</div>
    <div class="text-lg font-semibold text-gray-100"><%= pos_pct %>%</div>
    <div class="text-[11px] text-gray-500">dans le range</div>
  </div>

  <div class="bg-gray-900/60 border border-gray-700 rounded-xl p-3">
    <div class="text-xs text-gray-400">Max drawdown</div>
    <div class="text-lg font-semibold text-rose-300">
      <%= number_with_precision(max_drawdown_pct.to_f.abs, precision: 2) %>%
    </div>
    <div class="text-[11px] text-gray-500">pire chute depuis un sommet</div>
  </div>

  <div class="bg-gray-900/60 border border-gray-700 rounded-xl p-3">
    <div class="text-xs text-gray-400">Volatilité</div>
    <div class="text-lg font-semibold text-gray-100">
      <%= vol_label %> <span class="text-gray-500 text-sm font-mono">(~<%= vol_pct %>%/j)</span>
    </div>
    <div class="text-[11px] text-gray-500">moyenne des variations journalières</div>
  </div>
</div>
