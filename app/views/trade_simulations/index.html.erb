<% content_for :title, "Trade simulator" %>

<div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
  <div class="flex flex-col sm:flex-row sm:items-end sm:justify-between gap-3 mb-6">
    <div>
      <h1 class="text-2xl sm:text-3xl font-semibold text-gray-100">Trade simulator</h1>
      <p class="text-sm text-gray-400 mt-1">Historique de tes simulations (paper trades).</p>
    </div>
    <div class="flex gap-2">
      <%= link_to "← Dashboard", dashboard_path,
        class: "inline-flex items-center justify-center rounded-xl px-4 py-2
                bg-gray-900/60 border border-gray-700/60 text-gray-200
                hover:bg-gray-800 hover:border-gray-600 hover:text-gray-100
                transition text-sm font-semibold" %>

      <%= link_to "Nouvelle simulation", new_trade_simulation_path,
        class: "inline-flex items-center justify-center rounded-xl px-4 py-2
                bg-cyan-600/15 border border-cyan-500/50 text-cyan-200
                hover:bg-cyan-600/25 hover:border-cyan-400 hover:text-cyan-100
                transition text-sm font-semibold" %>
    </div>
  </div>

  <% if notice.present? %>
    <div class="mb-4 rounded-xl border border-emerald-500/30 bg-emerald-500/10 px-4 py-3 text-emerald-200 text-sm">
      <%= notice %>
    </div>
  <% end %>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-4">
    <% @trade_simulations.each do |sim| %>
      <%= link_to sim, class: "block rounded-2xl border border-gray-800 bg-gray-900/50 hover:bg-gray-900/70 transition p-5" do %>
        <div class="flex items-start justify-between gap-3">
          <div class="min-w-0">
            <p class="text-sm text-gray-400">Achat</p>
            <p class="text-gray-100 font-semibold">
              <%= sim.buy_day %> → <%= sim.sell_day %>
            </p>
            <p class="mt-1 text-sm text-gray-400">
              BTC: <span class="font-mono text-gray-200"><%= sim.btc_amount %></span>
            </p>
          </div>

          <span class="shrink-0 text-cyan-200 border border-cyan-500/40 bg-cyan-600/10 rounded-full px-2 py-1 text-xs font-semibold">
            Simulation
          </span>
        </div>

        <div class="mt-4 grid grid-cols-2 gap-3 text-xs text-gray-400">
          <div class="rounded-xl border border-gray-800 bg-black/20 p-3">
            Frais buy: <span class="font-mono text-gray-200"><%= sim.buy_fee_pct %>%</span>
          </div>
          <div class="rounded-xl border border-gray-800 bg-black/20 p-3">
            Frais sell: <span class="font-mono text-gray-200"><%= sim.sell_fee_pct %>%</span>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

  <% if @trade_simulations.empty? %>
    <div class="mt-6 rounded-2xl border border-gray-800 bg-gray-900/40 p-6 text-gray-300">
      Aucune simulation pour l’instant.
      <%= link_to "Créer la première", new_trade_simulation_path, class: "text-cyan-200 hover:text-cyan-100 underline ml-1" %>
    </div>
  <% end %>
</div>
